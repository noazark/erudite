- title @document.title

%h2= @document.title
%nav
  = form_for @document do |f|
    /button for cache
    = submit_tag "cache", :name => :cache
    /button for build genealogy
    = submit_tag "build genealogy", :name => :build_genealogy

%p= link_to @document.uri, @document.uri, target: '_blank'

%h3= "Links #{@document.links.length}"
%p
  - @document.links.each do |link|
    = link_to link, link

%h3= "Contents #{@document.contents.length}"
%p
  - @document.contents.each do |content|
    %a= content
